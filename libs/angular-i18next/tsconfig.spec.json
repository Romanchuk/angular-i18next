{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist/out-tsc",
    "module": "preserve",
    "target": "es2016",
    "types": ["jest", "node"],
    "allowSyntheticDefaultImports": false, // Typing support for this case
    "esModuleInterop": true,
  },
  "files": ["src/test-setup.ts"],
  "include": [
    "jest.config.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
