{
  "extends": "./tsconfig.json",
  "composite": true,
  "angularCompilerOptions": {
    "compilationMode": "partial",
    "strictTemplates": true,
    "enableResourceInlining": true
  },
  "buildOnSave": false,
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist",
    "inlineSources": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["dom", "es2020"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.shim.ts", "**/*.spec.ts", "src/test-setup.ts", "jest.config.ts"]
}
